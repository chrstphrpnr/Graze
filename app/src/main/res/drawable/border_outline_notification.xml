<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"> <!-- Define the shape as a rectangle -->

    <!-- Optional: Define the fill color -->
    <!-- <solid android:color="#FFFFFF"/>  Uncomment this line if you want a fill color -->

    <!-- Define the outline stroke -->
    <stroke
        android:width="0.6dp"
        android:color="#DADADA"/>

    <!-- Optional: Define the corners radius -->
    <corners
        android:radius="10dp"/> <!-- Corner radius, set to 0dp for square corners -->

    <!-- Optional: Add padding inside the shape -->
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp"/>
</shape>
