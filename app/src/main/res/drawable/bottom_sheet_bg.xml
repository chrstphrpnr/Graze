<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F1F1F1" />
            <corners
                android:topLeftRadius="@dimen/_30sdp"
                android:topRightRadius="@dimen/_30sdp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
        </shape>
    </item>
    <!-- Actual Shape -->
    <item android:top="@dimen/_4sdp" android:left="@dimen/_4sdp" android:right="@dimen/_4sdp" android:bottom="@dimen/_4sdp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners
                android:topLeftRadius="@dimen/_30sdp"
                android:topRightRadius="@dimen/_30sdp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
        </shape>
    </item>
</layer-list>
