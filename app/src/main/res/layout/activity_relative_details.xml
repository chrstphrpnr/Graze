<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeList.RelativeDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/notificationTaskbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@color/transparent"
            android:layout_marginTop="@dimen/_10sdp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/btnRelativeBack"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_arrow_left"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:layout_toRightOf="@+id/btnRelativeBack"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/main_color"
                    android:textStyle="bold"
                    />


            </RelativeLayout>





        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:id="@+id/relativeDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@+id/notificationTaskbar"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/relativeDetailsName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#525252"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/relativeDetailsBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birthdate"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#525252"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    />


                <TextView
                    android:id="@+id/relativeDetailsDeath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Death"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#525252"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    />

                <TextView
                    android:id="@+id/relativeDetailsExhumation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exhumation"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#525252"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    />


                <TextView
                    android:id="@+id/relativeDetailsSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#525252"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    />

                <TextView
                    android:id="@+id/relativeDetailsLotNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lot Number"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#525252"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    />

            </LinearLayout>





        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/requestServiceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeDetailsLayout"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_30sdp"
            >


            <TextView
                android:id="@+id/txtRequestTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Service"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                />

            <Spinner
                android:id="@+id/spinner"
                android:layout_below="@+id/txtRequestTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_30sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRequestService"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/rectangle"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_below="@+id/spinner"
                android:text="Request Service"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />


        </RelativeLayout>






    </RelativeLayout>


</ScrollView>