<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Auth.LoginActivity"
    android:background="#0AC10A"
    >

    <ImageView
        android:id="@+id/icLogoLogin"
        android:layout_width="@dimen/_500sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/ic_horizontal_logo_white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_85sdp"
        />


    <TextView
        android:id="@+id/titleWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Your Account"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_below="@+id/icLogoLogin"
        android:textSize="@dimen/_15sdp"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="@dimen/_86sdp"
        />


    <TextView
        android:id="@+id/txtTitleEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginLeft="@dimen/_30sdp"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        android:layout_below="@+id/titleWelcome"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_30sdp"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitleEmail"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColorHint="@color/white"
        app:boxStrokeWidth="1dp"
        app:boxStrokeColor="@drawable/text_input_layout"
        android:theme="@style/TextInputLayoutStyle"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtInputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Email"
            android:textColorHint="@color/white"
            android:textColor="#FFFFFF"

            />
    </com.google.android.material.textfield.TextInputLayout>



    <TextView
        android:id="@+id/txtTitlePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginLeft="@dimen/_30sdp"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        android:layout_below="@+id/layoutTextEmail"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_30sdp"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitlePassword"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColorHint="@color/white"
        android:theme="@style/TextInputLayoutStyle"
        app:boxStrokeColor="@drawable/text_input_layout"
        app:boxStrokeWidth="1dp"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtInputPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Enter your Password"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutTextPassword"
        android:background="@drawable/btn_round_white_color"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="Login"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:textColor="@color/main_color"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_10sdp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnLogin"
            android:text="Don't have an account yet? "
            android:textColor="#343434"
            />

        <TextView
            android:id="@+id/txtLinkRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register Here"
            android:textColor="#F5F8F5"
            android:textStyle="bold"/>


    </LinearLayout>







</RelativeLayout>