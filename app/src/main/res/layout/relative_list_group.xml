<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp"
    android:gravity="center"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        >


        <ImageView
            android:id="@+id/ic_grave_listview"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/ic_grave"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_centerVertical="true"
        />


        <TextView
            android:layout_toRightOf="@id/ic_grave_listview"
            android:id="@+id/relativeNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"
            android:textColor="#323232"
            android:text="Brix Saragosa"
            android:layout_marginTop="@dimen/_10sdp"
            />

        <TextView
            android:layout_toRightOf="@id/ic_grave_listview"
            android:layout_below="@+id/relativeNameTv"
            android:id="@+id/relativeDeathDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/_8sdp"
            android:textColor="#323232"
            android:text="2023-02-28"
            android:layout_marginTop="@dimen/_2sdp"
            />

        <TextView
            android:layout_toRightOf="@id/ic_grave_listview"
            android:layout_below="@+id/relativeDeathDateTv"
            android:id="@+id/relativeSectionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/_8sdp"
            android:textColor="#323232"
            android:text="Section 5"
            android:layout_marginTop="@dimen/_2sdp"
            />

        <ImageView
            android:id="@+id/btnDetails"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_details"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />



    </RelativeLayout>


</LinearLayout>